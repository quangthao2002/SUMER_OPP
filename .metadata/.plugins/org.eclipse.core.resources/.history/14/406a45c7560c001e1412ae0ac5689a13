package bai8;

public class Demo {

	public static void main(String[] args) {
		
		CD cd1 = new CD(1, "nhac tre", 3, 20000);
		CD cd2 = new CD(1, "phim trinh tham", 5, 30000);
		CD cd3 = new CD(1, "phim hanh dong", 16, 40000);
		CD cd4 = new CD(1, "nhac thieu nhi", 15, 50000);
		
		CDlist cdDlist = new CDlist(4);
		cdDlist.addCD(cd1);
		cdDlist.addCD(cd2);
		cdDlist.addCD(cd3);
		cdDlist.addCD(cd4);
		
		System.out.println("Thông tin các CD");
		cdDlist.InforAllCD();
		
	}
	
}
