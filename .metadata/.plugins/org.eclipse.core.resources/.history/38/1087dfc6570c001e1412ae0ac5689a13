package bai8;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.Iterator;

public class CDlist {
	private CD[] cdlist;
	private int count;

	public CDlist() {
	}

	public int getCount() {
		return count;
	}

	

	public CDlist(int n) {

		cdlist = new CD[n];
		count = 0;
	}

	public boolean addCD(CD cd) {

		if (count < cdlist.length) {
			for (int i = 0; i < count; i++) {
				if (cd.getMaCD() == cdlist[i].getMaCD()) {
					System.out.println("Mã CD đã tồn tại");
					return false;
				}
			}
			cdlist[count] = cd;
			count++;
			return true;
		} else {
			System.out.println("Danh sách đã đầy");
			return false;
		}

	}
	public void InforAllCD() {
		for(int i =0; i< count; i++) {
			System.out.println(cdlist[i].toString());
		}
		
	}
	public double TotalCost() {
		double total = 0;
		for (int i = 0; i < count; i++) {
			total += cdlist[i].getGiaThanh();
		}
		return total;
	}
//	Phương thức sắp xếp danh sách giảm dần theo giá thành.

	public void sortCDsByCostDescending() {
		Arrays.sort(cdlist, 0, count, (cd1, cd2) -> Double.compare(cd2.getGiaThanh(), cd1.getGiaThanh()));
		}
//
	public void sortCDsByTitleAscending() {
		Arrays.sort(cdlist, 0, count, (cd1, cd2) -> cd1.getTuaCD().compareToIgnoreCase(cd2.getTuaCD()));
		}
	
	

}
